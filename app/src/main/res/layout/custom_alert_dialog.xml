<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hinhConOng"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bee"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textViewThongBao"
        android:layout_width="match_parent"
        android:text="Bạn có thực sự muốn rút tiền ?
"        android:textSize="20dp"
        android:scrollbars="vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonKhong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="Không"
            android:textColor="@color/mauChuKhong"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonCo"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="Có"
            android:textColor="@color/mauChuCo"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>
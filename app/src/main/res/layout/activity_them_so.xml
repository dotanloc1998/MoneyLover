<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemSoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="Thêm sổ tiết kiệm"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextMaSo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Mã sổ:" />

        <Spinner
            android:textAlignment="center"
            android:id="@+id/spinnerTenNganHang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNgayGui"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ngày gửi"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/editTextSoTienGui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:hint="Số tiền gửi:"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextLaiSuat"
            android:inputType="number"
            android:digits="0123456789."
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Lãi suất:" />

        <Spinner
            android:textAlignment="center"
            android:id="@+id/spinnerKyHan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextLaiKhongKyHan"
            android:inputType="number"
            android:digits="0123456789."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lãi xuất không kỳ hạn:" />

        <Spinner
            android:textAlignment="center"
            android:id="@+id/spinnerTraLai"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Spinner
        android:textAlignment="center"
        android:id="@+id/spinnerKhiDenHan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/buttonMoSo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Mở sổ" />

    <Button
        android:id="@+id/buttonQuayLai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Quay lại" />
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauNen"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <com.smarteist.autoimageslider.SliderView
        android:layout_margin="20dp"
        android:id="@+id/imageSliderLogo"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderCircularHandlerEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="5"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:textColor="@drawable/mau_chu"
            android:background="@drawable/mau_nut"
            android:layout_width="match_parent"
            android:text="@string/nutDangKy"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDangKy"/>
        <Button
            android:textColor="@drawable/mau_chu"
            android:background="@drawable/mau_nut"
            android:layout_marginTop="20dp"
            android:text="@string/nutDangNhap"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonDangNhap"/>
    </LinearLayout>

</LinearLayout>

